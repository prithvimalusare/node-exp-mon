extends layout

block content
    h1= article.title
    h5 Written by #{author}
    p= article.body
    hr
    br
    if user
        if user.id == article.author
            a.btn.btn-primary.m-2(href='/articles/edit/'+article._id) Edit
            a.btn.btn-danger.delete-article.m-2(href='#', data-id=article._id ) Delete
    