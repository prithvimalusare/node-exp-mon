extends layout

block content
    h1 Welcome to user login page
    form(method='POST', action='/users/login')
        #form-group
            label Username:
            input.form-control(name='username', type='text')
        #form-group
            label Password:
            input.form-control(name='password', type='password')
        
        br
        input.but.btn-primary(type='submit', value='Submit')